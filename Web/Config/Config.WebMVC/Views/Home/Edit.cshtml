@model Config.Infrastructure.Models.ConfigItem
@inject IJsonHelper Json

<div class="layout-content" data-scrollable>
    <div class="container-fluid">
        <ol class="breadcrumb">
            <li><a asp-action="index">Config Items</a></li>
            <li class="active">Yeni Ekle</li>
        </ol>
        <div class="card">
            <div class="card-block">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="edit" class="form-horizontal">

                            <div class="form-group row">
                                <label class="col-sm-3 form-control-label">App Name</label>
                                <div class="col-md-9">
                                    <input asp-for="AppName" class="form-control" />
                                    <span asp-validation-for="AppName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 form-control-label">Name</label>
                                <div class="col-md-9">
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 form-control-label">Type</label>
                                <div class="col-md-9">
                                    <select asp-for="Type" asp-items="ViewBag.Types" class="form-control"></select>
                                    <span asp-validation-for="Type" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 form-control-label">Value</label>
                                <div class="col-md-9">
                                    <input asp-for="Value" class="form-control" />
                                    <span asp-validation-for="Value" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 form-control-label">Value</label>
                                <div class="col-md-9">
                                    <input type="checkbox" asp-for="IsActive" />
                                    <span asp-validation-for="IsActive" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-8 col-sm-offset-3">
                                    <div class="media">
                                        <div class="media-left">
                                            <button type="submit" class="btn btn-primary btn-rounded">Kaydet</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <input asp-for="Id" type="hidden" value="@Model.Id" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}