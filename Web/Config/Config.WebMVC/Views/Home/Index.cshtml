@model List<Config.Infrastructure.Models.ConfigItem>

<div class="layout-content" data-scrollable>
    <div class="container-fluid">
        <h4 class="page-heading">
            <div class="row">
                <div class="col-md-10">
                    Config Items
                </div>
            </div>
        </h4>
        <div class="card card-stats-success">
            <div class="card-block">
                <div class="media">
                    <div class="media-body media-middle">
                        Total
                        <strong class="text-success">@Model.Count</strong> Items
                    </div>
                    <div class="media-right">
                        <a asp-action="create" class="btn btn-success pull-xs-right btn-rounded">Yeni Ekle</a>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="card">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>AppName</th>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Value</th>
                        <th>Active</th>
                        <th width="80"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr data-id="@item.Id">
                            <td>@item.AppName</td>
                            <td>@item.Name</td>
                            <td>@item.Type</td>
                            <td>@item.Value</td>
                            <td>@item.IsActive</td>
                            <td class="right">
                                <a asp-action="edit" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Düzenle</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>